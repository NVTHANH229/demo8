<%= form_with(model: brand) do |form| %>
<% if brand.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(brand.errors.count, "error") %> prohibited this brand from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% brand.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :brand_name, class: label_class %>
          <%= form.text_field :brand_name, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :country, class: label_class %>
          <%= form.text_field :country, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if brand.persisted? %>
<%= link_to "Cancel", brand, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", brands_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
