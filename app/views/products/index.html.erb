


<div class="container mx-auto px-4">
  <div class="flex items-center justify-between flex-wrap mb-6">
    <h1 class="text-3xl font-bold text-blue-500">Products</h1>

    <%= link_to new_product_path, class: button_class(theme: "primary") do %>
    Add New Product
    <% end %>
  </div>

   <table class="table-auto border-collapse border-grey w-full">
  <thead class="bg-blue-200 dark:bg-blue-800">
      <tr>
        
          
                  <th class="border-2 border-gray-500 dark:border-gray-700 font-semibold p-4 text-white text-left">Name</th>
                  <th class="border-2 border-gray-500 dark:border-gray-700 font-semibold p-4 text-white text-left">Category</th>
                  <th class="border-2 border-gray-500 dark:border-gray-700 font-semibold p-4 text-white text-left">Brand</th>
                  <th class="border-2 border-gray-500 dark:border-gray-700 font-semibold p-4 text-white text-left">Short description</th>
                  <th class="border-2 border-gray-500 dark:border-gray-700 font-semibold p-4 text-white text-left">Size</th>
                  <th class="border-2 border-gray-500 dark:border-gray-700 font-semibold p-4 text-white text-left">Price</th>
                  <th class="border-2 border-gray-500 dark:border-gray-700 font-semibold p-4 text-white text-left">Quantity</th>
                  <th class="border-2 border-gray-500 dark:border-gray-700 font-semibold p-4 text-white text-left "></th>
                
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
      <%= content_tag :tr, id: dom_id(product), class: dom_class(product) do %>
      
        <td class="border-2 border-gray-500 dark:border-gray-700 p-4 text-black dark:text-black"><%= link_to product.product_name, product %></td>
      

              <td class="border-2 border-gray-500 dark:border-gray-700 p-4 text-black dark:text-black"><%= product.category.name %></td>
              <td class="border-2 border-gray-500 dark:border-gray-700 p-4 text-black dark:text-black"><%= product.brand.brand_name %></td>
              <td class="border-2 border-gray-500 dark:border-gray-700 p-4 text-black dark:text-black"><%= product.short_description %></td>
              <td class="border-2 border-gray-500 dark:border-gray-700 p-4 text-black dark:text-black"><%= product.size %></td>
              <td class="border-2 border-gray-500 dark:border-gray-700 p-4 text-black dark:text-black"><%= product.price %></td>
              <td class="border-2 border-gray-500 dark:border-gray-700 p-4 text-black dark:text-black"><%= product.quantity %></td>
       <td class="border-2 border-gray-500 dark:border-gray-700 p-4 text-black dark:text-black"><%= link_to 'Show', product %></td>
      
      <% end %>
      <% end %>
    </tbody>
  </table>
</div>
</div>
